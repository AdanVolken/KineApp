<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KineApp.Views.SintomaPage"
             Title="Pagina Sintomas" Padding="15" 
             >

    <StackLayout >
        <Label Text="Lista de SÃ­ntomas"
               FontSize="24"
               HorizontalOptions="Center" Margin="0,10,0,10" />


        <CollectionView x:Name="SintomasCollectionView"
                            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Nombre}"
                               FontSize="20"
                               VerticalOptions="Center"
                               Grid.Column="0" />
                        <Button Text="+"
                                TextColor="White"
                                VerticalOptions="Center"
                                Grid.Column="1"  Clicked="Button_Clicked_Sintoma"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>